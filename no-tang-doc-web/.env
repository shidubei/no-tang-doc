# Keycloak environment variables for Vite (must start with VITE_)

VITE_KEYCLOAK_URL=https://auth.ntdoc.site/
VITE_KEYCLOAK_REALM=ntdoc
VITE_KEYCLOAK_CLIENT_ID=no-tang-doc-core
